<%- include('../partials/header.ejs')%>
    <div class="banner">
        <form method="POST" action="/connections/<%= connection._id%>?_method=PUT">
            <table>
                <tr>
                    <td><label for="topic">Topic</label></td>
                    <td><input type="text" id="topic" name="connectiontopic" value="<%= connection.connectiontopic%>">
                    </td>
                </tr>
                <tr>
                    <td><label for="title">Title</label></td>
                    <td><input type="text" id="title" name="title" value="<%= connection.title%>"></td>
                </tr>
                <tr>
                    <td><label for="host">Host</label></td>
                    <td><input type="text" id="hostname" name="hostname" placeholder="Host"
                            value="<%= connection.hostname%>"></td>
                </tr>
                <tr>
                    <td><label for="details">Details</label></td>
                    <td><textarea name="details" id="details" cols="30" rows="10"><%= connection.details%></textarea>
                    </td>
                </tr>
                <tr>
                    <td><label for="where">Where</label></td>
                    <td><input type="text" id="where" name="where" value="<%= connection.where%>"></td>
                </tr>
                <tr>
                    <td><label for="date">When</label></td>
                    <td><input type="text" id="date" name="date" value="<%= connection.when%>"></td>
                </tr>
                <tr>
                    <td><label for="starttime">Start</label></td>
                    <td><input type="time" id="startTime" name="startTime" value="<%= connection.startTime%>"></td>
                </tr>
                <tr>
                    <td> <label for="endtime">End</label></td>
                    <td><input type="time" id="endTime" name="endTime" value="<%= connection.endTime%>"></td>
                </tr>
                <tr>
                    <td> <label for="image">Image</label></td>
                    <td><input type="url" id="image" name="image" value="<%= connection.image%>"></td>
                </tr>

                <tr>
                    <td colspan="2" class="align-right"><button>Submit</button></td>
                </tr>
            </table>
        </form>

    </div>
    <%- include('../partials/footer.ejs')%>